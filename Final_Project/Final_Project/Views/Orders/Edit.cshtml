@model Order
<h1 class="alert alert-warning text-center">Edit Order</h1>
<div class="row">
    <form class="col-4" method="post" asp-controller="Orders" asp-action="EditCurrent" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="CustomerId"></label>
            <select asp-for="CustomerId" asp-items="@ViewBag.CustomerSelect" class="form-control">
                <option selected disabled>Select...</option>
            </select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ProductId"></label>
            <select asp-for="ProductId" asp-items="@ViewBag.ProductSelect" class="form-control">
                <option selected disabled>Select...</option>
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Quantity"></label>
            <input type="number" asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="OrderDate"></label>
            <input asp-for="OrderDate" class="form-control" />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="ShippedDate"></label>
            <input asp-for="ShippedDate" class="form-control" />
            <span asp-validation-for="ShippedDate" class="text-danger"></span>
        </div>

        <div>
            <button type="submit" class="btn btn-primary mt-1">Edit</button>
            <a class="nav-link text-white btn btn-primary mt-1" asp-controller="Orders" asp-action="GetIndexView">Back to list</a>
        </div>
    </form>
</div>