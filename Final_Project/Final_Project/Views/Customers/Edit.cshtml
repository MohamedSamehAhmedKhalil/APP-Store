@model Customer
<h1 class="alert alert-warning text-center">Edit Customer</h1>
<div class="row">
    <form class="col-4" method="post" asp-controller="Customers" asp-action="EditCurrent" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Address"></label>
            <input type="text" asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Mobile"></label>
            <input type="text"  asp-for="Mobile" class="form-control" />
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="JoinDate"></label>
            <input asp-for="JoinDate" class="form-control" />
            <span asp-validation-for="JoinDate" class="text-danger"></span>
        </div>


        <div>
            <button type="submit" class="btn btn-primary mt-1">Edit</button>
            <a class="nav-link text-white btn btn-primary mt-1" asp-controller="Customers" asp-action="GetIndexView">Back to list</a>
        </div>
    </form>
</div>